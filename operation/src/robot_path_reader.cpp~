// g++ -std=c++11 robot_path_reader.cpp  -o robot_path_reader
#include <iostream>
#include <fstream>
#include <string>
#include <cmath>
#define Pi 3.1415926


using namespace std;

int main(){
    fstream myfile("robot_path.txt", ios_base::in);
    float ft_line;
	int num;
    int count = 0;
    if(myfile.is_open())
	{
        cout << " txt opened" << endl;
		myfile >> ft_line;
		num=ft_line;
		cout<<"num:"<<num<<endl;
		for(int i=0;i<num;i++){
			

		
        while( myfile >> ft_line){
            ++count;
            if(count % 4 == 0){
                // z vector
                cout << " mod 4 == 0 is " << ft_line << endl;
            }else if(count % 4 == 1){
                // x vector
                cout << " mod 4 == 1 is " << ft_line << endl;
            }else if(count % 4 == 2){
                // y vector
                cout << " mod 4 == 2 is " << ft_line << endl;
            }else if(count % 4 == 3){
                // w vector
                cout << " mod 4 == 3 is " << ft_line << endl;
            }
        }

	}		
    }
    myfile.close();



    return 0;
}
